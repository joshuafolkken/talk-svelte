{
	"name": "talk-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:static": "ADAPTER=static vite build",
		"stop:preview": "npx kill-port 4173 || true",
		"preview": "vite preview",
		"preview:static": "npx serve build",
		"prepare": "svelte-kit sync || echo '' && lefthook install",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"storybook": "STORYBOOK=true storybook dev -p 6006",
		"build-storybook": "STORYBOOK=true storybook build",
		"lefthook:install": "lefthook install",
		"lefthook:uninstall": "lefthook uninstall",
		"lefthook:commit": "lefthook run pre-commit",
		"lefthook:push": "lefthook run pre-push",
		"sonar": "source .env && sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.token=$SONAR_TOKEN -Dsonar.branch.name=$(git branch --show-current)",
		"check-commit-message": "tsx scripts/check-commit-message.ts",
		"prevent-main-commit": "tsx scripts/prevent-main-commit.ts",
		"generate-voices": "npx dotenv-cli -e .env tsx scripts/generate-voices.ts"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.2",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.38.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@inlang/paraglide-js": "^2.4.0",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@playwright/test": "^1.56.1",
		"@storybook/addon-a11y": "^10.0.1",
		"@storybook/addon-docs": "^10.0.1",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/addon-vitest": "^10.0.1",
		"@storybook/sveltekit": "^10.0.1",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.48.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.16",
		"@types/node": "^24.9.2",
		"@vitest/browser": "^4.0.5",
		"cspell": "^9.2.2",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^11.0.0",
		"drizzle-kit": "^0.31.6",
		"drizzle-orm": "^0.44.7",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-storybook": "^10.0.1",
		"eslint-plugin-svelte": "^3.12.5",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.4.0",
		"lefthook": "^2.0.2",
		"mdsvex": "^0.12.6",
		"node-fetch": "^3.3.2",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"storybook": "^10.0.1",
		"svelte": "^5.43.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.16",
		"tsx": "^4.20.6",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.12",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.5",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.2",
		"postgres": "^3.4.7"
	}
}
